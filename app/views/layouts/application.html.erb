<!DOCTYPE html>
<html>
  <head>
    <title>SebouBlog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-2">
      <%= link_to "SebouBlog", root_path, class: 'navbar-brand' %>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarCollapsedContent"
        aria-controls="navbarCollapsedContent"
        aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarCollapsedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: 'nav-link' %>
          </li>
        </ul>

        <div class="dropdown">
          <a
            class="nav-link text-white dropdown-toggle"
            href="#"
            id="navbarUserDropdown"
            role="button"
            data-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false">
            <%= user_signed_in? ? current_user.display_name : "Anonymous" %>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarUserDropdown">
            <% if user_signed_in? %>
              <%= link_to "Edit profile", edit_user_registration_path, class: 'dropdown-item' %>
              <%= link_to "Log out", destroy_user_session_path, class: 'dropdown-item' %>
            <% else %>
              <%= link_to "Log in", new_user_session_path, class: 'dropdown-item' %>
              <%= link_to "Sign up", new_user_registration_path, class: 'dropdown-item' %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <main>
      <%= yield %>
    </main>
  </body>
</html>
